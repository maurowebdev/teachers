<%= render "layouts/header" %>
<div class="container mt-5 pt-5">
  <div class="row justify-content-md-center">


<div class="col-lg-6">

  <div class="form">

    <h4>Sign Up</h4>
    <p>We will <strong>never</strong> share your information. Learn more reading our ToS.</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "contactForm"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <!-- <div class="form-group">
        <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
        <div class="validation"></div>
      </div> -->
      <div class="form-group">
        <%= f.collection_select :city_id, City.order(:name), :id, :name, { prompt: "Select City..."}, { class: "form-control", autofocus: true, required: true } %>
        <div class="validation"></div>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your Email", id: "email", "data-rule": "email", "data-msg": "Please enter a valid email" %>
        <div class="validation"></div>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password", placeholder: "Your password (At least 8 chars)", "data-rule":"minlen:8", "data-msg":"Password must have at least 8 chars" %>
        <div class="validation"></div>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password-confirmation", class: "form-control", id: "password-confirmation", placeholder: "Confirm your password", "data-rule":"minlen:8", "data-msg":"Password must have at least 8 chars" %>
        <div class="validation"></div>
      </div>
      <!-- <div class="form-group">
        <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
        <div class="validation"></div>
      </div>
      <div class="form-group">
        <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
        <div class="validation"></div>
      </div> -->

      <!-- <div id="sendmessage">Your message has been sent. Thank you!</div>
      <div id="errormessage"></div> -->
      Already have an account? <%= link_to "Log in", new_session_path(resource_name) %> instead

      <div class="text-center"><button class="btn btn-info btn-large" type="submit" title="Sign Up">Sign Up</button></div>
    <% end %>
  </div>
</div>
</div>
</div>
