        <% end %>
        <li><%= link_to "Become a Student", new_user_registration_path(role: "student") %></li>
        <li><%= link_to "Become a Student", new_user_registration_path(role: "teacher") %></li>
      </ul>
    </nav><!-- .main-nav -->

  </div>
